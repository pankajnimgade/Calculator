<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
    </style>

    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/black</item>
    </style>


    <style name="ButtonKeyPad" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:clickable">true</item>

        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/textSize_Keypad_Button</item>
        <item name="android:fontFamily">sans-serif-condensed</item>

        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:onClick">inputCollector</item>
    </style>

    <style name="InputTextDisplay" parent="android:TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>

        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/textSize_Keypad_Button</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

    <style name="InputEquationTextDisplay" parent="android:TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>

        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/textSize_InputEquationText</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:longClickable">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="aboutTextView" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>


        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSize_AboutTextView</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:longClickable">false</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


</resources>
